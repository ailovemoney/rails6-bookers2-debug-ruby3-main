<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <td></td>
          <td>コメント数：<%= @books.book_comments.count %></td>
            <td>
              <% if @books.user.id == current_user.id %>
                <%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %>
            </td>
            <td>
                <%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              <% end %>
            </td>
        </tr>
      </table>

      <!--コメント一覧-->
      <table class="comments_area">
        <%= render "book_comments/comment-list", books: @books %>
      </table>

      <!-- コメント入力フォーム -->
      <div class="new-comment">
        <%= render "book_comments/comment-form", books: @books, book_comment: @book_comment %>
      </div>

    </div>
  </div>
</div>