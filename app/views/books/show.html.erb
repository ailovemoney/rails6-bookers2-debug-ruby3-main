<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <td></td>
          <td>コメント数：<%= @books.book_comments.count %></td>
            <td>
              <% if @books.user.id == current_user.id %>
                <%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %>
            </td>
            <td>
                <%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              <% end %>
            </td>
        </tr>
      </table>

      <!-- コメント機能 -->
      <table>
        <% @books.book_comments.each do |book_comment| %>
        <tr>
          <td><%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
              <%= link_to "#{book_comment.user.name}", user_path(book_comment.user.id) %>
          </td>
          <td><%= book_comment.comment %></td>
          <td>
            <% if book_comment.user == current_user %>
              <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete do %>
              <button type="button" class="btn btn-danger">削除</button>
              <% end %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>

      <!-- コメント入力フォーム -->
      <div>
        <%= form_with model: [@books, @book_comment] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control" %>
        </div>
          <%= f.submit "送信" %>
        <% end %>
      </div>

    </div>
  </div>
</div>